@using NavigationRoutes
@using NoName.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @RenderSection("head", required: false)
    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@
</head>
<body>
    <div class="navbar navbar-inverse nav navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.ActionLink("NoName", "Index", "Show", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="divider-vertical"></li>
                        @Html.Partial("_Navigation")
                    </ul>
                </div>

                <div class="pull-right">
                    <ul class="nav pull-right">
                        @Html.Partial("_AccountPartial")
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div>
        @Html.Partial("~/Views/Account/_LoginModal.cshtml", new LoginModel())
        @Html.Partial("~/Views/Account/_RegisterModal.cshtml", new RegisterModel())
    </div>

    <div>
        @Html.Partial("~/Views/Admin/_AdminModal.cshtml")
    </div>

    <div>
        @Html.Partial("~/Views/Contact/_ContactModal.cshtml", new MessageViewModel())
    </div>

    <div class="container" id="main">
        @Html.Partial("_alerts")
        @Html.Partial("_validationSummary")
        @RenderBody()
        <hr>
        <footer>
            @Html.Partial("_Footer")
        </footer>
    </div>
    @Scripts.Render("~/bundles/nn")
    @RenderSection("Scripts", required: false)
</body>
</html>